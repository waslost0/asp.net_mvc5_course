@model IEnumerable<WebApplication1.Models.Movie>
@{
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container row p-0 m-0">
        <div class="col-6 mb-2">
            <h2 class="text-info">Customers</h2>
        </div>
        <div class="col-3 offset-3">
            <a asp-action="New" asp-controller="Movies" class="btn btn-info form-control text-white cursor-pointer">
                Add New Movie
            </a>
        </div>


        @if (!Model.Any())
        {
            <p>We dont have any movie</p>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Movie</th>
                        <th>Genre</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td><a href="/Movies/Edit/@movie.Id" class="cursor-pointer">@movie.Name</a></td>
                            <td>@movie.Genre.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="col-12 border p-3">
            <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Genre</th>
                        <th>Release Date</th>
                        <th>Number in Stock</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

@section Scripts
{
    <script src="~/js/moviesList.js"></script>
}



