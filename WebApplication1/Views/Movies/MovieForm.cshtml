@model WebApplication1.ViewModels.MovieFormViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">@(Model.Movie.Id == 0 ? "Create": "Edit") Movie</h2>
<br />


<div class="border" style="padding:30px;width:70%">
    <form asp-action="Save" method="post">
        @if (Model.Movie.Id != 0)
        {
            <input type="hidden" asp-for="Movie.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Movie.Name">Name</label>
            </div>
            <div class="col-8">
                <input asp-for="Movie.Name" class="form-control" />
                <span asp-validation-for="Movie.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Movie.ReleaseDate">Release Date</label>
            </div>
            <div class="col-8">
                <input asp-for="Movie.ReleaseDate" class="form-control" />
                <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Movie.GenreId">Genre</label>

            </div>

            <div class="col-8">
                <select style="width:100%;padding:6px" asp-for="Movie.GenreId"
                        asp-items="@(new SelectList(Model.Genres,"Id","Name"))">
                    <option value="">Select Genre</option>
                </select>
                <span asp-validation-for="Movie.GenreId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Movie.NumberInStock">Number in stock</label>
            </div>

            <div class="col-8">
                <input asp-for="Movie.NumberInStock" class="form-control" />
                <span asp-for="Movie.NumberInStock"></span>
            </div>
        </div>



        <div class="form-group row">
            <div class="col-4 offset-4">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Movie.Id!=0 ? "Update":"Create")
                </button>
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>


    </form>
</div>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}